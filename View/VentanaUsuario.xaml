<Window x:Class="Infor_Soft_WPF.VentanaUsuario"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalles del Usuario"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="WhiteSmoke"
        WindowStyle="None" AllowsTransparency="True">

    <Border CornerRadius="20" BorderBrush="#D7CCC8" BorderThickness="2" Background="WhiteSmoke" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Background="WhiteSmoke">
                <TextBlock Text="👤 Detalles del Usuario" FontSize="24" FontWeight="Bold"
                           Foreground="DarkGoldenrod" Margin="20,0"
                           VerticalAlignment="Center"/>
                <Button Content="❌" Width="40" Height="30" Click="Cerrar_Click"
                        Background="Transparent" BorderThickness="0"
                        Foreground="Red" HorizontalAlignment="Right"/>
            </DockPanel>

            <!-- Contenido principal -->
            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Información del usuario y lista de informes -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <Border Background="White" CornerRadius="15" Padding="15" BorderBrush="#FFC107" BorderThickness="2">
                        <StackPanel>
                            <TextBlock Text="📌 Usuario:   " FontSize="18" FontWeight="Bold" Foreground="#FF582E04"/>
                            <TextBlock Text="📧 Email: juan.lopez@fpune.edu.py" Margin="0,5"/>
                        </StackPanel>
                    </Border>

                    <TextBlock Text="📄 Informes Realizados" Margin="0,20,0,5" FontWeight="Bold" Foreground="#FF582E04"/>
                    <DataGrid x:Name="dgInformes" AutoGenerateColumns="False" SelectionChanged="dgInformes_SelectionChanged"
                              Height="250" Margin="0,0,0,10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Título" Binding="{Binding Titulo}" Width="*"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="🔍 Ver Informe Seleccionado" Height="35"
                            Background="#FF582E04" Foreground="White"
                            Click="VerInforme_Click" HorizontalAlignment="Right"
                            Cursor="Hand" Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Abogados relacionados -->
                <Border Grid.Column="1" Background="White" CornerRadius="15" Padding="10" BorderBrush="#FFC107" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="👨‍⚖️ Abogados Relacionados" FontWeight="Bold" Foreground="#FF582E04" Margin="0,0,0,10"/>
                        <ListBox x:Name="lstAbogados" Height="300">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Vertical">
                                        <TextBlock Text="{Binding Nombre}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Especialidad}" FontStyle="Italic" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
