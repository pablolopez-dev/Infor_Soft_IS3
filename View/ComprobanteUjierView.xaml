<UserControl x:Class="Infor_Soft_WPF.View.ComprobanteUjierView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="20">

        <StackPanel>

            <TextBlock Text="Factura de Ujier"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="#FF582E04"
                       Margin="50,0,0,20"/>

            <!-- Usuario y Juzgado -->
            <StackPanel Orientation="Vertical" Margin="50,0,0,20">
                <TextBlock x:Name="txtNombreUsuarioSidebar"
                   Text=""
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#FF582E04"/>
                <TextBlock x:Name="txtJuzgadoSidebar"
                   Text=""
                   FontSize="14"
                   Foreground="#FF582E04"/>
            </StackPanel>
            
            <!-- Datos del Cliente -->
            <GroupBox Header="Datos del Abogado Cliente" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Nombre del Abogado:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtCliente" />
                        <TextBlock Text="Ingrese nombre y apellido"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text , ElementName=txtCliente, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <TextBlock Text="N° Documento:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtDocumento"/>
                        <TextBlock Text="Ingrese número de documento"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text , ElementName=txtDocumento, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Datos del Expediente -->
            <GroupBox Header="Datos del Expediente" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="N° Expediente:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Row="0" Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtNumeroExpediente" />
                        <TextBlock Text="Ingrese número de expediente"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text , ElementName=txtNumeroExpediente, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>

                    <TextBlock Text="Año:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtAnioExpediente" />
                        <TextBlock Text="Ingrese año"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text , ElementName=txtAnioExpediente, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Detalle de Diligencias -->
            <GroupBox Header="Detalle de Diligencias" Margin="0,0,0,15">
                <StackPanel Margin="10">

                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Margin="0,0,5,0">
                            <TextBox x:Name="txtDescripcion"/>
                            <TextBlock Text="Descripción"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text , ElementName=txtDescripcion, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <Grid Grid.Column="1" Margin="0,0,5,0">
                            <TextBox x:Name="txtDestino"/>
                            <TextBlock Text="Destino"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text , ElementName=txtDestino, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <Grid Grid.Column="2" Margin="0,0,5,0">
                            <TextBox x:Name="txtDistancia"/>
                            <TextBlock Text="Distancia (Km)"
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text, ElementName=txtDistancia, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <Grid Grid.Column="3" Margin="0,0,5,0">
                            <TextBox x:Name="txtMonto"/>
                            <TextBlock Text="Monto Gs."
                                       Foreground="Gray"
                                       IsHitTestVisible="False"
                                       Margin="5,0,0,0"
                                       VerticalAlignment="Center"
                                       Visibility="{Binding Text , ElementName=txtMonto, Converter={StaticResource BoolToVisibilityConverter}}"/>
                        </Grid>

                        <Button Content="Agregar"
                                Grid.Column="4"
                                Background="#FF582E04"
                                Foreground="White"
                                Margin="5"
                                Click="Agregar_Click"/>
                    </Grid>

                    <DataGrid x:Name="dgDiligencias"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              Height="200"
                              Margin="0,5,0,0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                            <DataGridTextColumn Header="Destino" Binding="{Binding Destino}" Width="*"/>
                            <DataGridTextColumn Header="Distancia (Km)" Binding="{Binding DistanciaKm}" Width="*"/>
                            <DataGridTextColumn Header="Monto" Binding="{Binding Monto}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </GroupBox>

            <!-- Totales -->
            <GroupBox Header="Totales" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Total Gs.:" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtTotalMonto" IsReadOnly="True"/>
                        <TextBlock Text="Total calculado automáticamente"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text , ElementName=txtTotalMonto, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- Datos de Liquidación -->
            <GroupBox Header="Datos de Liquidación" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Fecha de Liquidación:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpFechaLiquidacion" Grid.Row="0" Grid.Column="1" Margin="5"/>

                    <TextBlock Text="N° Liquidación:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
                    <Grid Grid.Row="1" Grid.Column="1" Margin="5">
                        <TextBox x:Name="txtNumeroLiquidacion"/>
                        <TextBlock Text="Ingrese número de liquidación"
                                   Foreground="Gray"
                                   IsHitTestVisible="False"
                                   Margin="5,0,0,0"
                                   VerticalAlignment="Center"
                                   Visibility="{Binding Text, ElementName=txtNumeroLiquidacion, Converter={StaticResource BoolToVisibilityConverter}}"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <Button Content="Generar Comprobante"
                    Background="#FF582E04"
                    Foreground="White"
                    FontSize="16"
                    Height="45"
                    Margin="0,10,0,0"
                    Click="GenerarComprobante_Click"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
