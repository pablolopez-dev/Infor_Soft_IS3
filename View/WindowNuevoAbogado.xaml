<Window x:Class="Infor_Soft_WPF.View.WindowNuevoAbogado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Abogado"
        Height="380"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">

    <Border Padding="20" CornerRadius="10" Background="White" BorderBrush="#CCCCCC" BorderThickness="1" Margin="0,0,0,-35">
     <StackPanel VerticalAlignment="Top" Height="294">

            <!-- Título -->
            <TextBlock Text="Nuevo Abogado"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#333"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

            <!-- Campo: Nombre -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Nombre" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtNombre" Height="30"/>
            </StackPanel>

            <!-- Campo: Apellido -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock Text="Apellido" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtApellido" Height="30"/>
            </StackPanel>

            <!-- Campo: Teléfono -->
            <StackPanel Margin="0,0,0,20">
                <TextBlock Text="Teléfono" FontWeight="SemiBold" Margin="0,0,0,5"/>
                <TextBox x:Name="txtTelefono" Height="30"/>
            </StackPanel>


            <!-- Campo: Teléfono -->
            <StackPanel Margin="0,0,0,20"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancelar"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="Cancelar_Click"/>

                <Button Content="Guardar"
                        Width="80"
                        Background="#4CAF50"
                        Foreground="White"
                        BorderBrush="#388E3C"
                        Click="Guardar_Click"/>
            </StackPanel>

        </StackPanel>
    </Border>
</Window>
