<Window x:Class="Infor_Soft_WPF.View.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" d:DesignWidth="800"
      Background="#FF582E04"
      Title="Page1" Height="535">

    <Window.Resources>
        <!-- Estilo de botón redondeado -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Montserrat"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="40,10,40,-68">
        <Grid.RowDefinitions>
            <RowDefinition Height="167*"/>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <!-- Contenedor con estilo degradado -->
        <Border CornerRadius="10"
                BorderThickness="2"
                Opacity="0.95"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Width="420"
                Padding="30" Height="489" Grid.RowSpan="2" Margin="0,-10,0,0">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF582E04" Offset="0"/>
                    <GradientStop Color="#FF582E04" Offset="0.75"/>
                    <GradientStop Color="#FF582E04" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#FF231300" Offset="0"/>
                    <GradientStop Color="#FF582E04" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Margin="0,0,0,-45">
                <Button Content="⟵ Volver"
        Width="66"
        Height="22"
        FontSize="10"
        FontWeight="Bold"
        Foreground="White"
        Background="#BF6408"
        BorderBrush="#BF6408"
        BorderThickness="0"
        Cursor="Hand"
        HorizontalAlignment="left"
        Margin="0,-5,20,0"
        Click="BtnVolver_Click">
                    <Button.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                    </Button.Effect>
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="0">
                                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="10,5"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Text="Registro de Usuario"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="50,-25,0,20"
                           HorizontalAlignment="Center"
                           FontFamily="Montserrat"/>

                <!-- Usuario -->
                <!-- Nombre -->
                <TextBlock Text="Nombre" FontFamily="Montserrat" Foreground="White"/>
                <TextBox x:Name="txtNombre"
         Height="35"
         Padding="10"
         Margin="0,5,0,15"
         FontFamily="Montserrat"
         BorderBrush="#ccc"/>

                <TextBlock Text="Usuario" FontFamily="Montserrat" Foreground="White"/>
                <TextBox x:Name="txtUsuario"
                         Height="35"
                         Padding="10"
                         Margin="0,5,0,15"
                         FontFamily="Montserrat"
                         BorderBrush="#ccc"/>

                <!-- Correo -->
                <TextBlock Text="Correo" FontFamily="Montserrat" Foreground="White"/>
                <TextBox x:Name="txtCorreo"
                         Height="35"
                         Padding="10"
                         Margin="0,5,0,15"
                         FontFamily="Montserrat"
                         BorderBrush="#ccc"/>

                <!-- Matrícula -->
                <TextBlock Text="Matrícula" FontFamily="Montserrat" Foreground="White"/>
                <TextBox x:Name="txtMatricula"
                         Height="35"
                         Padding="10"
                         Margin="0,5,0,15"
                         FontFamily="Montserrat"
                         BorderBrush="#ccc"
                         PreviewTextInput="txtMatricula_PreviewTextInput"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña" FontFamily="Montserrat" Foreground="White"/>
                <PasswordBox x:Name="txtPassword"
                             Height="35"
                             Padding="10"
                             Margin="0,5,0,25"
                             FontFamily="Montserrat"
                             BorderBrush="#ccc"/>

                <!-- Botón de registro -->
                <Button Content="Registrarse"
                        Style="{StaticResource RoundedButton}"
                        Background="Maroon"
                        BorderThickness="0"
                        Click="btnRegistrar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
